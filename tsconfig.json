{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es6", "dom", "esnext.asynciterable", "es2017"],
	"noEmit": false,
	"declaration": true,
    "sourceMap": true,
	"declarationMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
  },
  "exclude": [
    "node_modules", //
    "dist",
  ],
  "include": [
    //
    "./src/**/*.ts",
    "./**/*.ts"
  ],
}
